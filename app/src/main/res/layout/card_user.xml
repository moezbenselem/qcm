<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/card_viewUser"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="#FF9B54"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
             />

        <TextView
            android:id="@+id/item_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="login"
            android:textSize="20dp"

            android:layout_toEndOf="@+id/item_image" />

        <TextView
            android:id="@+id/item_nompre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="nom prenom"
            android:layout_below="@+id/item_login"
            android:layout_toEndOf="@+id/item_image" />



        <TextView
            android:id="@+id/item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="enseignant"
            android:textSize="20dp"
            android:layout_below="@+id/item_nompre"
            android:layout_toEndOf="@+id/item_image" />


        <Switch
            android:id="@+id/switchEtat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="0"
            android:text="Non VÃ©rifier"
            android:layout_below="@+id/item_type"
            android:layout_toEndOf="@+id/item_image"
            android:layout_marginTop="12dp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>